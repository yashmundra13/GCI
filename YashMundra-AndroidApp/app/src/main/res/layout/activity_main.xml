<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="@drawable/backg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About Me"
        android:id="@+id/about_me_head"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:textColor="#00338f"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="I am a 16 year old highly motivated student with a keen interest in computer science. This passion for code has led me to found a first of its kind Tech Club called the 'Turing Fraternity' in the desert state of Rajasthan. My other interests include a relentless passion for football and physics."
        android:id="@+id/about_sec"
        android:layout_below="@+id/about_me_head"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_above="@+id/git"
        android:textStyle="normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Me on Facebook"
        android:id="@+id/fb"
        android:layout_alignParentStart="true"
        style="@android:style/TextAppearance.Material.Widget.ActionMode.Subtitle.Inverse"
        android:background="#3b5998"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/about_sec"
        android:onClick="fb_go" />

    <Button
        style="@android:style/TextAppearance.Material.Widget.ActionMode.Subtitle.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find me on Github"
        android:id="@+id/git"
        android:background="#8c2798"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_above="@+id/fb"
        android:layout_alignEnd="@+id/fb"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:onClick="git_go"/>

</RelativeLayout>
